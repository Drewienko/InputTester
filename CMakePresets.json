{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux-debug-gcc",
      "displayName": "Linux Debug (GCC + Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTING": "ON",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_PREFIX_PATH": "$env{QT6_PREFIX}"
      }
    },
    {
      "name": "linux-release-gcc",
      "displayName": "Linux Release (GCC + Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "OFF",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_PREFIX_PATH": "$env{QT6_PREFIX}"
      }
    },
    {
      "name": "windows-debug-msvc",
      "displayName": "Windows Debug (MSVC 2022)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_PREFIX_PATH": "$env{QT6_PREFIX}"
      }
    },
    {
      "name": "windows-release-msvc",
      "displayName": "Windows Release (MSVC 2022)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release",
        "BUILD_TESTING": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_PREFIX_PATH": "$env{QT6_PREFIX}"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-debug-gcc",
      "configurePreset": "linux-debug-gcc"
    },
    {
      "name": "linux-release-gcc",
      "configurePreset": "linux-release-gcc"
    },
    {
      "name": "windows-debug-msvc",
      "configurePreset": "windows-debug-msvc",
      "configuration": "Debug"
    },
    {
      "name": "windows-release-msvc",
      "configurePreset": "windows-release-msvc",
      "configuration": "Release"
    },
    {
      "name": "windows-release-msvc-deploy",
      "configurePreset": "windows-release-msvc",
      "configuration": "Release",
      "targets": ["deployQtKeyLog"]
    },
    {
      "name": "windows-debug-msvc-deploy",
      "configurePreset": "windows-debug-msvc",
      "configuration": "Debug",
      "targets": ["deployQtKeyLogDebug"]
    }
  ],
  "testPresets": [
    {
      "name": "linux-debug-gcc",
      "configurePreset": "linux-debug-gcc",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-debug-msvc",
      "configurePreset": "windows-debug-msvc",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
